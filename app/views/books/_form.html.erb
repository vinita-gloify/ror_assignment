<%= form_for @book do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
  
    </p>
  
    <p>
        <%= f.label :published_at %>
        <%= f.date_select :published_at %>

    </p>  

    <p>
        <%= f.label :language %>
        <%= f.text_field :language %>
  
    </p>

    <p>
        <%= f.label :author %>
        <%= f.select :user_id, 
        options_from_collection_for_select(@authors, :id, :name, @book.user&.id), :prompt => "Select Author" %>
    </p>
    <p>
        <%= f.submit %>
    </p>
  
<% end %>  