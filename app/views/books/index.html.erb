<p id="notice"><%= notice %></p>

<h1>Book</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Published At</th>
      <th>Language</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.published_at %></td>
        <td><%= book.language %></td>
        <td><%= book.user.name %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>  
    <% end %>
  </tbody>
</table>

