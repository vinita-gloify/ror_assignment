<%= form_for @user do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
  
    </p>
  
    <p>
        <%= f.label :date_of_birth %>
        <%= f.date_select :date_of_birth %>

    </p>  

    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
  
    </p>

     
    <p>
        <%= f.submit %>
    </p>
  
<% end %>  